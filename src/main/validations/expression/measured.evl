context EXPR!IntegerAttribute {
    constraint MeasureIsValid {
        guard: self.satisfiesAll("Resolved")
        
        check: not self.isMeasured() or self.getBaseMeasures().isDefined()
        message: "Measure of expression is invalid: " + self.toString()
    }
}


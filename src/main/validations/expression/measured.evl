context EXPR!NumericExpression {
    constraint MeasureOfStandaloneExpressionIsDefined {
        guard: self.satisfiesAll("Resolved") and self.isStandalone() and self.isMeasured()
        
        check: self.getMeasure().isDefined()
        message: "Measure is not defined for standalone expression: " + self.toString()
    }
}
